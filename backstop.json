{
  "id": "dimes.rockarch.org",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://localhost:3000/"
    },
    {
      "label": "Homepage Types",
      "url": "http://localhost:3000/",
      "clickSelector": "#downshift-0-toggle-button",
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "My List",
      "url": "http://localhost:3000/list",
      "delay": 1000,
      "onBeforeScript": "mock_request.js"
    },
    {
      "label": "Requesting Unavailable Modal",
      "url": "http://localhost:3000/list",
      "clickSelector": "#main > div.mylist__export-actions > button:nth-child(1)",
      "delay": 1000,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Email Modal",
      "url": "http://localhost:3000/list",
      "clickSelector": "#main > div.mylist__export-actions > button:nth-child(1)",
      "onBeforeScript": "mock_request.js",
      "delay": 1000,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Remove All Items Modal",
      "url": "http://localhost:3000/list",
      "clickSelector": "#main > div.mylist__export-actions > button:nth-child(3)",
      "delay": 1000,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Reading Room Request Modal",
      "url": "http://localhost:3000/list",
      "clickSelector": "#main > div > div > aside > button:nth-child(2)",
      "onBeforeScript": "mock_request.js",
      "delay": 1000,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Duplication Request Modal",
      "url": "http://localhost:3000/list",
      "clickSelector": "#main > div > div > aside > button:nth-child(2)",
      "onBeforeScript": "mock_request.js",
      "delay": 1000,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        },
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Search",
      "url": "http://localhost:3000/search?category=&limit=40&query=banana",
      "onBeforeScript": "mock_request.js"
    },
    {
      "label": "Search Facets",
      "url": "http://localhost:3000/search?category=&limit=40&query=banana",
      "clickSelector": "#main > div > div > div.results > div.results__header > div.results__controls > button",
      "onBeforeScript": "mock_request.js",
      "delay": 30000
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
